{
    "id": "itzg_minecraft",
    "name": "Minecraft",
    "author": "itzg",
    "documentationUrl": "https://github.com/itzg/docker-minecraft-server/blob/master/README.md",
    "description": "Minecraft is a sandbox video game developed by the Swedish video game developer Mojang Studios. In Minecraft, players explore a blocky, procedurally generated 3D world with virtually infinite terrain, and may discover and extract raw materials, craft tools and items, and build structures or earthworks.",
    "verified": true,
    "imageUrl": "/icons/minecraft.png",
    "arch": [
        "linux/arm/v7",
        "linux/arm64",
        "linux/amd64",
        "windows/amd64"
    ],
    "launchConfiguration": {
        "image": "itzg/minecraft-server",
        "tag": "latest",
        "portConfig": [
            {
                "port": 25565,
                "protocol": "tcp"
            },
            {
                "port": 25575,
                "protocol": "udp"
            }
        ],
        "environmentVariables": [
            {
                "name": "EULA",
                "type": "boolean",
                "required": true,
                "default": "true"
            },
            {
                "name": "TYPE",
                "type": "string",
                "required": false,
                "default": ""
            },
            {
                "name": "FTB_MODPACK_ID",
                "type": "string",
                "required": false,
                "default": ""
            },
            {
                "name": "FTB_MODPACK_VERSION_ID",
                "type": "string",
                "required": false,
                "default": ""
            },
            {
                "name": "MOTD",
                "type": "string",
                "required": false,
                "default": ""
            },
            {
                "name": "DIFFICULTY",
                "type": "string",
                "required": false,
                "default": ""
            },
            {
                "name": "WHITELIST",
                "type": "string",
                "required": false,
                "default": ""
            },
            {
                "name": "OPS",
                "type": "string",
                "required": false,
                "default": ""
            },
            {
                "name": "MAX_PLAYERS",
                "type": "number",
                "required": false,
                "default": ""
            },
            {
                "name": "MAX_WORLD_SIZE",
                "type": "string",
                "required": false,
                "default": ""
            }
        ],
        "mounts": [
            {
                "source": "{{fusion.directory.data}}/{{fusion.pod.id}}/data",
                "destination": "/data",
                "required": false
            },
            {
                "source": "{{fusion.directory.data}}/{{fusion.pod.id}}/worlds",
                "destination": "/worlds",
                "required": false
            }
        ],
        "command": "",
        "healthConfiguration": {
            "type": "docker",
            "command": "docker container inspect -f \"{{.State.Health.Status}}\" mc",
            "states": [
                {
                    "state": "healthy",
                    "desiredResponse": "healthy"
                },
                {
                    "state": "unhealthy",
                    "desiredResponse": ""
                }
            ]
        }
    },
    "plugins": [
        "NOOP"
    ]
}